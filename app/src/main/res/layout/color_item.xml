<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/xhdpi25"
    android:layout_height="@dimen/xhdpi25"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="@dimen/xhdpi5"
    android:id="@+id/colorItemRL">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/colorItemOuterCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            app:cardCornerRadius="100dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/colorItemInnerCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/xhdpi3.5"
            app:cardCornerRadius="100dp" />


</RelativeLayout>